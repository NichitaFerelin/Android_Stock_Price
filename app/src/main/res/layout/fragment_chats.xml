<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/bottomAppBarHeight"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout style="@style/appBar">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/textViewH2"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="@string/titleChats" />

            <ImageView
                android:id="@+id/imageViewAdd"
                style="@style/clickableImage"
                android:layout_gravity="center_vertical|end"
                android:src="@drawable/ic_add_person"
                android:contentDescription="@string/descriptionAddPerson" />

        </FrameLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewRelations"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/appBarHeight"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>