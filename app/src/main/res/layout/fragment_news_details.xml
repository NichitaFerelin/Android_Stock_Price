<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewImageHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageViewNews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:src="@mipmap/test" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textViewHeadline"
            style="@style/textViewH3"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardViewImageHolder"
            tools:text="More sops needed to boost electronic manufacturing:Top govt official More sops needed to boost electronicmanufacturing: Top govt official. More sops needed toboost electronic manufacturing: Top govt official More sopsneeded to boost electronic manufacturing: Top govt official" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewSummaryHolder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="@dimen/smallMargin"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewHeadline">

            <TextView
                android:id="@+id/textViewSummary"
                style="@style/textViewBody"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewHeadline"
                tools:text="the official told ET, pointing out that Indian electronicnufacturers incur 8-10% higher costs compared with other Asianuntries.Sops that are similar to the incentives for export undere existing Merchandise Exports from India Scheme (MEIS) are whate industry requires, the person said.MEIS gives tax credit ine range of 2-5%. An interest subvention scheme for cheaper loansd a credit guarantee scheme for plant and machinery are some otherssible measures that will help the industry, the official added.his should be 2.0 (second) version of the electronic manufacturinguster (EMC) scheme, which is aimed at creating an ecosystem with annchor company plus its suppliers to operate in the same area,” heaid.Last week, finance minister Nirmala Sitharaman announced aeries of measures to boost economic growth including a schemellowing any new manufacturing company incorporated on or afterctober 1, to pay income tax at 15% provided the company does notavail of any other exemption or incentives." />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textViewDate"
            style="@style/textViewBody"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardViewSummaryHolder"
            tools:text="7 dec 2020" />

        <TextView
            android:id="@+id/textViewBrowserHint"
            style="@style/textViewBody"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="Open in browser: "
            android:textColor="@color/grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardViewSummaryHolder" />

        <TextView
            android:id="@+id/textViewUrl"
            style="@style/textViewBody"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintEnd_toStartOf="@id/textViewDate"
            app:layout_constraintStart_toEndOf="@id/textViewBrowserHint"
            app:layout_constraintTop_toBottomOf="@id/cardViewSummaryHolder"
            tools:text="https://www.businessinsider.com/how-to-disable-comments-on-youtube" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>