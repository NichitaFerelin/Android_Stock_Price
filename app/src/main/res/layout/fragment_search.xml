<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.Group
        android:id="@+id/sectionHints"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="textViewRequests, recyclerViewPopularRequests, textViewSearched, recyclerViewSearchedHistory" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/sectionResults"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:constraint_referenced_ids="textViewStocks, textViewShowMore, recyclerViewSearchResults" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewSearch"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="14dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp" />

    <ImageView
        android:id="@+id/imageViewBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:elevation="1dp"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@id/cardViewSearch"
        app:layout_constraintStart_toStartOf="@id/cardViewSearch"
        app:layout_constraintTop_toTopOf="@id/cardViewSearch" />

    <EditText
        android:id="@+id/editTextSearch"
        style="@style/textViewH3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="40dp"
        android:elevation="1dp"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/cardViewSearch"
        app:layout_constraintEnd_toEndOf="@id/cardViewSearch"
        app:layout_constraintStart_toEndOf="@id/imageViewBack"
        app:layout_constraintTop_toTopOf="@id/cardViewSearch" />

    <TextView
        android:id="@+id/textViewRequests"
        style="@style/textViewH2"
        android:layout_width="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Popular requests"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardViewSearch"
        app:layout_goneMarginStart="20dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPopularRequests"
        android:layout_width="wrap_content"
        android:layout_height="88dp"
        android:layout_marginTop="11dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewRequests"
        app:spanCount="2" />

    <TextView
        android:id="@+id/textViewSearched"
        style="@style/textViewH2"
        android:layout_width="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:text="You've searched for this"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recyclerViewPopularRequests" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSearchedHistory"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:layout_marginTop="11dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewSearched"
        app:spanCount="2" />

    <TextView
        android:id="@+id/textViewStocks"
        style="@style/textViewH2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="Stocks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardViewSearch" />

    <TextView
        android:id="@+id/textViewShowMore"
        style="@style/textViewBody"
        android:layout_marginEnd="20dp"
        android:text="Show more"
        app:layout_constraintBottom_toBottomOf="@id/textViewStocks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textViewStocks" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSearchResults"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewStocks" />

</androidx.constraintlayout.widget.ConstraintLayout>