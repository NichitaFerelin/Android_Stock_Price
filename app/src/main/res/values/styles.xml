<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base text views-->
    <style name="textView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/w_600</item>
    </style>

    <style name="textViewBody" parent="textView">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="textViewBodySemiBold" parent="textView">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="textViewH1" parent="textView">
        <item name="android:textSize">28sp</item>
        <item name="fontFamily">@font/w_700</item>
    </style>

    <style name="textViewH2" parent="textView">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/w_700</item>
    </style>

    <style name="textViewH3" parent="textView">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Tab text views -->
    <style name="textViewH3Tab" parent="textViewH3">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <!-- Constrained width text views -->
    <style name="textViewH3ConstrainedWidth" parent="textViewH3">
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="textViewH2ConstrainedWidth" parent="textViewH2">
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="textViewBodySemiBoldConstrainedWidth" parent="textViewBodySemiBold">
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="textViewBodyConstrainedWidth" parent="textViewBody">
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- Shadowed text views -->
    <style name="textViewH1Shadowed" parent="textView">
        <item name="android:textSize">28sp</item>
        <item name="fontFamily">@font/w_700</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="textViewH2Shadowed" parent="textView">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/w_700</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="textViewH3Shadowed" parent="textView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="textViewBodyShadowed" parent="textView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="textViewBodyShadowedTab" parent="textViewBodyShadowed">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="textViewBodySemiBoldShadowed" parent="textView">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="textViewH3ConstrainedWidthShadowed" parent="textViewH3ConstrainedWidth">
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- Other -->

    <style name="clickableImage">
        <item name="android:padding">8dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="progressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:indeterminate">true</item>
        <item name="trackColor">@color/black</item>
    </style>

    <style name="chartCardView">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="cardBackgroundColor">@color/whiteDark</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">12dp</item>
    </style>

    <style name="chartCardViewActive" parent="chartCardView">
        <item name="cardBackgroundColor">@color/black</item>
    </style>

    <style name="fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:backgroundTint">@color/whiteDark</item>
        <item name="android:visibility">invisible</item>
        <item name="android:src">@drawable/ic_arrow_up</item>
        <item name="layout_behavior">.custom.FabBehaviourScrollable</item>
        <item name="tint">@color/black</item>
    </style>

    <style name="editText" parent="textViewH3">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:imeOptions">flagNoFullscreen</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
    </style>

    <style name="recyclerSearches">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/recyclerSearchesHeight</item>
        <item name="android:layout_marginTop">11dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="layoutManager">androidx.recyclerview.widget.StaggeredGridLayoutManager</item>
        <item name="spanCount">2</item>
    </style>

    <style name="recyclerSearchesLandscape" parent="recyclerSearches">
        <item name="spanCount">1</item>
        <item name="android:layout_height">@dimen/recyclerSearchesHeightLandscape</item>
    </style>

    <style name="recyclerStocks">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:transitionGroup">true</item>
        <item name="fastScrollEnabled">true</item>
        <item name="fastScrollHorizontalThumbDrawable">@drawable/scroller_drawable</item>
        <item name="fastScrollHorizontalTrackDrawable">@drawable/scroller_line_drawable</item>
        <item name="fastScrollVerticalThumbDrawable">@drawable/scroller_drawable</item>
        <item name="fastScrollVerticalTrackDrawable">@drawable/scroller_line_drawable</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
    </style>

    <style name="cardSearch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">14dp</item>
        <item name="android:transitionName">card</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">40dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="cardSearchActive" parent="cardSearch">
        <item name="strokeWidth">2dp</item>
        <item name="android:outlineProvider">none</item>
    </style>

    <style name="stockIcon">
        <item name="android:layout_width">@dimen/stockIconHeight</item>
        <item name="android:layout_height">@dimen/stockIconWidth</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cardCornerRadius">13dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="loadingCard">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="ShapeAppearance.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="materialEditTextInputLayout" parent="editText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="hintTextColor">@color/grey</item>
    </style>

    <style name="imageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="appBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/appBarHeight</item>
        <item name="android:background">@color/white</item>
        <item name="android:elevation">6dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="collapsingToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="layout_scrollFlags">scroll|snap</item>
    </style>

</resources>