<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/w_600</item>
    </style>

    <style name="textViewH1" parent="textView">
        <item name="android:textSize">28sp</item>
        <item name="fontFamily">@font/w_700</item>
    </style>

    <style name="textViewH2" parent="textView">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/w_700</item>
    </style>

    <style name="textViewH3" parent="textView">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textViewBody" parent="textView">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="textViewBodySemiBold" parent="textView">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="textViewH1Shadowed" parent="textView">
        <item name="android:textSize">28sp</item>
        <item name="fontFamily">@font/w_700</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="textViewH2Shadowed" parent="textView">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/w_700</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="textViewH3Shadowed" parent="textView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="textViewBodyShadowed" parent="textView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="textViewBodySemiBoldShadowed" parent="textView">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

</resources>