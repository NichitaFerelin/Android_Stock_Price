<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base text views-->
    <style name="textView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/w_600</item>
    </style>

    <style name="textViewBody" parent="textView">
        <item name="android:textSize">@dimen/textViewBody</item>
    </style>

    <style name="textViewBodySemiBold" parent="textView">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="textViewH1" parent="textView">
        <item name="android:textSize">28sp</item>
        <item name="fontFamily">@font/w_700</item>
    </style>

    <style name="textViewH2" parent="textView">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/w_700</item>
    </style>

    <style name="textViewH3" parent="textView">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Constrained width text views -->
    <style name="textViewH3ConstrainedWidth" parent="textViewH3">
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="textViewH2ConstrainedWidth" parent="textViewH2">
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="textViewBodySemiBoldConstrainedWidth" parent="textViewBodySemiBold">
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="textViewBodyConstrainedWidth" parent="textViewBody">
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- Shadowed text views -->

    <style name="textViewH2Shadowed" parent="textView">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/w_700</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="textViewH3Shadowed" parent="textView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="textViewH3ConstrainedWidthShadowed" parent="textViewH3ConstrainedWidth">
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- Other -->

    <style name="clickableImage">
        <item name="android:background">@drawable/ripple_icon</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="progressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:indeterminate">true</item>
        <item name="trackColor">@color/black</item>
    </style>

    <style name="chartCardView">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="cardBackgroundColor">@color/whiteDark</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">12dp</item>
    </style>

    <style name="chartCardViewActive" parent="chartCardView">
        <item name="cardBackgroundColor">@color/black</item>
    </style>

    <style name="fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:backgroundTint">@color/whiteDark</item>
        <item name="android:visibility">invisible</item>
        <item name="android:src">@drawable/ic_arrow_up_6</item>
        <item name="layout_behavior">com.ferelin.core.customView.FabBehaviourScrollable</item>
        <item name="tint">@color/black</item>
    </style>

    <style name="editText" parent="textViewH3">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:imeOptions">flagNoFullscreen</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textCursorDrawable">@drawable/ic_cursor_2</item>
    </style>

    <style name="recyclerViewSearchRequests">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/searchRecyclerHeight</item>
        <item name="android:layout_marginTop">11dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="layoutManager">androidx.recyclerview.widget.StaggeredGridLayoutManager</item>
        <item name="spanCount">2</item>
    </style>

    <style name="recyclerViewSearchRequestsLandscape" parent="recyclerViewSearchRequests">
        <item name="spanCount">1</item>
        <item name="android:layout_height">@dimen/searchRecyclerHeightLandscape</item>
    </style>

    <style name="recyclerView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:transitionGroup">true</item>
        <item name="fastScrollEnabled">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingBottom">50dp</item>
        <item name="fastScrollHorizontalThumbDrawable">@drawable/scroller_drawable</item>
        <item name="fastScrollHorizontalTrackDrawable">@drawable/scroller_line_drawable</item>
        <item name="fastScrollVerticalThumbDrawable">@drawable/scroller_drawable</item>
        <item name="fastScrollVerticalTrackDrawable">@drawable/scroller_line_drawable</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
    </style>

    <style name="cardSearch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">14dp</item>
        <item name="android:transitionName">card</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">40dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="cardSearchActive" parent="cardSearch">
        <item name="strokeWidth">2dp</item>
        <item name="android:outlineProvider">none</item>
    </style>

    <style name="loadingCard">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="materialEditTextInputLayout" parent="editText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="hintTextColor">@color/grey</item>
    </style>

    <style name="collapsingToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="layout_scrollFlags">scroll|snap</item>
    </style>

    <style name="snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">@color/whiteDark</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="snackbarButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="snackbarTextView" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textAppearance">@style/textViewH2</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize30Percent" parent="">
        <item name="cornerSize">30%</item>
    </style>

    <style name="stockImage">
        <item name="android:layout_width">@dimen/stockWidth</item>
        <item name="android:layout_height">@dimen/stockHeight</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:contentDescription">@string/descriptionCompanyIcon</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.CornerSize30Percent
        </item>
    </style>

    <style name="clickableTextViewBody" parent="textViewBodyConstrainedWidth">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:background">@drawable/ripple_text</item>
    </style>

    <style name="clickableTextViewH2" parent="textViewH2ConstrainedWidth">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:background">@drawable/ripple_text</item>
    </style>

    <style name="ButtonStyle2" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@color/selector_checked_thumb</item>
        <item name="trackTint">@color/selector_checked_track</item>
    </style>

</resources>