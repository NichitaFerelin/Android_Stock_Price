<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/white"
    tools:theme="@style/Theme.StockPrice">

    <com.ferelin.core.ui.view.custom.Separator
        android:id="@+id/separator"
        android:layout_width="200dp"
        android:layout_height="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardHolder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/optionMargin"
        android:layout_marginTop="@dimen/optionMargin"
        android:layout_marginEnd="@dimen/optionMargin"
        android:layout_marginBottom="@dimen/optionMargin"
        android:foreground="@drawable/ripple_dark"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="@id/textViewSource"
        app:layout_constraintEnd_toEndOf="@id/image"
        app:layout_constraintStart_toStartOf="@id/textViewTitle"
        app:layout_constraintTop_toTopOf="@id/textViewTitle" />

    <TextView
        android:id="@+id/textViewTitle"
        style="@style/textViewH3"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/blue"
        app:layout_constraintEnd_toStartOf="@id/image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separator"
        tools:text="Authentication" />

    <TextView
        android:id="@+id/textViewSource"
        style="@style/textViewH3"
        android:layout_marginTop="6dp"
        android:textColor="@color/grey"
        app:layout_constraintEnd_toStartOf="@id/image"
        app:layout_constraintStart_toStartOf="@id/textViewTitle"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        tools:text="You are not authorized" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        app:layout_constraintBottom_toBottomOf="@id/textViewSource"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textViewTitle"
        tools:ignore="ContentDescription"
        tools:src="@drawable/ic_login_30" />

</androidx.constraintlayout.widget.ConstraintLayout>